# Production Environment Configuration Template
# Copy this file to .env.production and fill in your actual values

# ===== MySQL Database Configuration =====
MYSQL_ROOT_PASSWORD=CHANGE_ME_STRONG_ROOT_PASSWORD
MYSQL_DATABASE=csv_importer
MYSQL_USER=csvuser
MYSQL_PASSWORD=CHANGE_ME_STRONG_USER_PASSWORD

# ===== Application Configuration =====
APP_VERSION=1.0.0

# JWT Secret (generate with: openssl rand -base64 32)
JWT_SECRET=CHANGE_ME_STRONG_JWT_SECRET

# OAuth Configuration
OAUTH_SERVER_URL=https://api.manus.im
VITE_OAUTH_PORTAL_URL=https://portal.manus.im
VITE_APP_ID=your-app-id

# Owner Information
OWNER_OPEN_ID=your-owner-open-id
OWNER_NAME=Your Name

# Application Settings
VITE_APP_TITLE=CSV to Azure SQL Importer
VITE_APP_LOGO=/logo.svg

# ===== Manus Forge API (Optional) =====
BUILT_IN_FORGE_API_URL=https://forge.manus.im
BUILT_IN_FORGE_API_KEY=your-forge-api-key
VITE_FRONTEND_FORGE_API_KEY=your-frontend-forge-api-key
VITE_FRONTEND_FORGE_API_URL=https://forge.manus.im

# ===== Analytics (Optional) =====
VITE_ANALYTICS_ENDPOINT=https://analytics.example.com
VITE_ANALYTICS_WEBSITE_ID=your-website-id

# ===== Data Storage Path =====
# Path where MySQL data will be stored (must exist and have proper permissions)
DATA_PATH=./data/mysql
