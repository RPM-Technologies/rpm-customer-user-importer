# RPM Customer User Importer - Azure Deployment Configuration
# Copy this file to config.env and fill in your values
# DO NOT commit config.env to version control

################################################################################
# Azure Subscription and Resource Group
################################################################################

# Your Azure subscription ID
AZURE_SUBSCRIPTION_ID="your-subscription-id-here"

# Resource group name (will be created if it doesn't exist)
RESOURCE_GROUP="rpm-importer-rg"

# Azure region for all resources
LOCATION="eastus"

################################################################################
# Application Configuration
################################################################################

# Application name (must be globally unique)
APP_NAME="rpm-customer-user-importer"

# App Service SKU (B1, B2, B3, S1, S2, S3, P1V2, P2V2, P3V2)
APP_SERVICE_SKU="B1"

################################################################################
# Azure Container Registry
################################################################################

# Container registry name (must be globally unique, alphanumeric only)
ACR_NAME="rpmimporteracr"

# ACR SKU (Basic, Standard, Premium)
ACR_SKU="Basic"

################################################################################
# MySQL Database Configuration
################################################################################

# MySQL server name (must be globally unique)
MYSQL_SERVER_NAME="rpm-importer-mysql"

# MySQL administrator username
MYSQL_ADMIN_USER="adminuser"

# MySQL administrator password (minimum 8 characters, must include uppercase, lowercase, numbers, and special characters)
MYSQL_ADMIN_PASSWORD="YourSecurePassword123!"

# MySQL database name
MYSQL_DATABASE_NAME="rpm_importer"

# MySQL SKU (Standard_B1ms, Standard_B1s, Standard_B2s, Standard_D2ds_v4, etc.)
MYSQL_SKU="Standard_B1ms"

# MySQL tier (Burstable, GeneralPurpose, MemoryOptimized)
MYSQL_TIER="Burstable"

# MySQL version
MYSQL_VERSION="8.0.21"

# MySQL storage size in GB
MYSQL_STORAGE_SIZE="32"

# MySQL backup retention in days
MYSQL_BACKUP_RETENTION="7"

################################################################################
# Application Environment Variables
################################################################################

# JWT secret for session management (will be auto-generated if not provided)
JWT_SECRET=""

# Manus OAuth configuration (if using Manus authentication)
OAUTH_SERVER_URL=""
VITE_OAUTH_PORTAL_URL=""
VITE_APP_ID=""

# Owner information
OWNER_OPEN_ID=""
OWNER_NAME=""

# Application branding
VITE_APP_TITLE="RPM Customer User Importer"
VITE_APP_LOGO=""

# Manus Forge API (if using built-in services)
BUILT_IN_FORGE_API_URL=""
BUILT_IN_FORGE_API_KEY=""
VITE_FRONTEND_FORGE_API_KEY=""
VITE_FRONTEND_FORGE_API_URL=""

################################################################################
# Optional: Analytics
################################################################################

VITE_ANALYTICS_ENDPOINT=""
VITE_ANALYTICS_WEBSITE_ID=""
